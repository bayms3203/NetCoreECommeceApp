@model Cart

@* bu view component cart datası ile çalışacak *@


<ul class="list-group">

  @if (Model.CarItems.Count == 0)
  {
      <li class="list-group-item d-flex justify-content-between align-items-center">
         Sepetiniz boştur. Ürün eklemek için Sepete ekle butonunu tıklayınız.
      </li>
  }
  else
  {

    @foreach (var item in Model.CarItems)
    {
      <li class="list-group-item d-flex justify-content-between align-items-center">
        @item.Description x @item.Quantity
        <span class="badge badge-primary badge-pill">@item.SalesPrice</span>
      </li>
    }



  }


  <li class="list-group-item active d-flex justify-content-between align-items-center">
    Toplam : @Model.TotalPrice
       <span class="badge badge-primary badge-pill"><a class='btn btn-secondary' asp-controller="Order" asp-action="DoOrder"> Sipariş Ver </a></span>
  </li>




</ul>
